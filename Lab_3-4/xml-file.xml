<?xml version="1.0" encoding="utf-8"?>

<settings>
	<syntaxes>

		<syntax id = "python"
		name = "Язык программирования Python"
		ext_list="py">

			<!-- Ключевые слова -->

			<rule>
				<pattern value = "\bclass\b"/>
				<format foreground="#00008B" font_weight="75"/>
			</rule>

			<!-- Однострочный комментарий -->

			<rule>
				<pattern value = "#[^\n]*"/>
				<format foreground="#008000" font_weight="75"/>
			</rule>
		</syntax>
	</syntaxes >
</settings>